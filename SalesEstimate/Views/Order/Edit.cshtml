@model SalesEstimate.Models.Order
@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h5>@ViewBag.PageTitle</h5>
                <div class="card">
                    <form class="col-12 g-3 needs-validation" asp-action="EditOrderDetail" method="post" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="general-info-tab" data-bs-toggle="tab" href="#general-info" role="tab" aria-controls="general-info" aria-selected="true">General Information</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="order-details-tab" data-bs-toggle="tab" href="#order-details" role="tab" aria-controls="order-details" aria-selected="false">Order Details</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="general-info" role="tabpanel" aria-labelledby="general-info-tab">
                                <div class="card-body">
                                    <!-- General Information Fields -->
                                    <div class="row g-3">
                                        <!-- Quotation Request -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="quotationRequest" asp-for="QuotationRequest" required>
                                                <label for="quotationRequest">Order or Quotation Request:</label>
                                                <div class="invalid-feedback">
                                                    Please enter a quotation request.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Order Type -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="orderType" asp-for="OrderType" required>
                                                <label for="orderType">Order or Quotation Type:</label>
                                                <div class="invalid-feedback">
                                                    Please enter the order type.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Checkboxes Section -->
                                        <div class="col-md-6 col-xl-4 mb-3 mt-3">
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" id="IsActivatePriceCalculation" name="IsActivatePriceCalculation" value="true"
                                                @(Model?.IsActivatePriceCalculation == true ? "checked" : "") />
                                                <label class="form-check-label" for="IsActivatePriceCalculation">Activate Price Calculation</label>
                                            </div>

                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" id="IsBuyAmericaActProject" name="IsBuyAmericaActProject" value="true"
                                                @(Model?.IsBuyAmericaActProject == true ? "checked" : "") />
                                                <label class="form-check-label" for="IsBuyAmericaActProject">Buy America Act Project</label>
                                            </div>

                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="checkbox" id="IsPurchaseOrderQuoted" name="IsPurchaseOrderQuoted" value="true"
                                                @(Model?.IsPurchaseOrderQuoted == true ? "checked" : "") />
                                                <label class="form-check-label" for="IsPurchaseOrderQuoted">Has This Purchase Order been Quoted?</label>
                                            </div>
                                        </div>

                                        <!-- Company Name -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="companyName" asp-for="CompanyName" required>
                                                <label for="companyName">Company Name:</label>
                                                <div class="invalid-feedback">
                                                    Please enter the company name.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Customer Purchase Order -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="purchaseOrder" asp-for="CustomerPurchaseOrder">
                                                <label for="purchaseOrder">Customer Purchase Order (P.O.):</label>
                                            </div>
                                        </div>

                                        <!-- Contact Name -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="contactName" asp-for="ContactName" required>
                                                <label for="contactName">Contact Name:</label>
                                                <div class="invalid-feedback">
                                                    Please enter the contact name.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Contact Phone -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="contactPhone" asp-for="ContactPhone" required>
                                                <label for="contactPhone">Contact Phone #:</label>
                                                <div class="invalid-feedback">
                                                    Please enter the contact phone number.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Contact Fax -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="contactFax" asp-for="ContactFax">
                                                <label for="contactFax">Contact Fax #:</label>
                                            </div>
                                        </div>

                                        <!-- Contact Email -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="email" class="form-control" id="contactEmail" asp-for="ContactEmail" required>
                                                <label for="contactEmail">Contact Email:</label>
                                                <div class="invalid-feedback">
                                                    Please enter a valid email address.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Order Date -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="date" class="form-control" id="orderDate" asp-for="OrderDate" required>
                                                <label for="orderDate">Order Date:</label>
                                                <div class="invalid-feedback">
                                                    Please select an order date.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Required Date -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="date" class="form-control" id="requiredDate" asp-for="RequiredDate" required>
                                                <label for="requiredDate">Required Date:</label>
                                                <div class="invalid-feedback">
                                                    Please select a required date.
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Project Total Value -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="number" class="form-control" id="projectTotalValue" asp-for="ProjectTotalValue">
                                                <label for="projectTotalValue">If yes, what is the project total value?:</label>
                                            </div>
                                        </div>

                                        <!-- Quote Number -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="quoteNumber" asp-for="QuoteNumber">
                                                <label for="quoteNumber">Quote Number:</label>
                                            </div>
                                        </div>

                                        <!-- Job Site Name -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="jobSiteName" asp-for="JobSiteName">
                                                <label for="jobSiteName">Job Site Name:</label>
                                            </div>
                                        </div>

                                        <!-- Contractor -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="contractor" asp-for="Contractor">
                                                <label for="contractor">Contractor:</label>
                                            </div>
                                        </div>

                                        <!-- Job Site Contact Name -->
                                        <div class="col-md-6 col-xl-4">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="jobSiteContactName" asp-for="JobSiteContactName">
                                                <label for="jobSiteContactName">Job Site Contact Name:</label>
                                            </div>
                                        </div>

                                        <!-- Contact Phone or Cell -->
                                        <div class="col-md-6 col-xl-4 mb-2">
                                            <div class="form-floating">
                                                <input type="text" class="form-control" id="jobSiteContactPhone" asp-for="JobSiteContactPhone">
                                                <label for="jobSiteContactPhone">Contact Phone or Cell:</label>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="card">
                                        <div class="card-body mt-2">
                                            <div class="row">
                                                <!-- Ship to Address -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating">
                                                        <select class="form-select" id="shipToAddress" asp-for="ShipToAddress" required>
                                                            <option value="">Select Address</option>
                                                            <option value="My location">My location</option>
                                                            <option value="Job site">Job site</option>
                                                            <option value="Pick up by customer">Pick up by customer</option>
                                                            <option value="Other branch location">Other branch location</option>
                                                        </select>
                                                        <label for="shipToAddress" class="form-label">Ship to Address:</label>
                                                        <span asp-validation-for="ShipToAddress" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <!-- Street Address -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control" id="streetAddress" asp-for="StreetAddress" placeholder="Street Address">
                                                        <label for="streetAddress" class="form-label">Street Address:</label>
                                                    </div>
                                                </div>

                                                <!-- City -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control" id="city" asp-for="City" placeholder="City">
                                                        <label for="city" class="form-label">City:</label>
                                                    </div>
                                                </div>

                                                <!-- State -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating">
                                                        <select class="form-select" id="lookupStateId" name="LookupStateId" required>
                                                            <option value="">Select State</option>
                                                            @if (ViewBag.States != null)
                                                            {
                                                                foreach (var item in (SelectList)ViewBag.States)
                                                                {
                                                                    if (item.Value == Model.LookupStateId.ToString())
                                                                    {
                                                                        <option value="@item.Value" selected>@item.Text</option>
                                                                    }
                                                                    else
                                                                    {
                                                                        <option value="@item.Value">@item.Text</option>
                                                                    }
                                                                }
                                                            }
                                                        </select>
                                                        <label for="lookupStateId" class="form-label">State:</label>
                                                        <span asp-validation-for="LookupStateId" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <!-- Zip Code -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control" id="zipCode" asp-for="ZipCode" placeholder="Zip Code">
                                                        <label for="zipCode" class="form-label">Zip Code:</label>
                                                    </div>
                                                </div>
                                                <!-- Additional Shipping Instructions -->
                                                <div class="col-md-6 col-xl-3 mb-3">
                                                    <div class="form-floating ">
                                                        <textarea class="form-control" id="additionalShippingInstructions" asp-for="AdditionalShippingInstructions" rows="3"></textarea>
                                                        <label for="additionalShippingInstructions" class="col-form-label">Additional Shipping Instructions:</label>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Details Tab -->
                            <div class="tab-pane fade" id="order-details" role="tabpanel" aria-labelledby="order-details-tab">
                                <div class="card-body">
                                    <div class="col-md-12 text-end mb-3">
                                        <button type="button" class="btn btn-primary" id="addOrderDetails">Add+</button>
                                    </div>
                                    <div id="orderDetailsContainer">
                                        @foreach (var detail in Model.OrderDetails)
                                        {
                                            if (Model.OrderDetails.Count() == 1) 
                                            { detail.OrderLine = 0; }
                                            else { detail.OrderLine = (detail.OrderLine - 1); }

                                            <partial name="_OrderDetails" model="detail" />
                                        }
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" value="@Model.OrderDetails.Count()" id="totalOrderItems" />
                            <div class="submitButtonContainer text-end mt-3 mb-2">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        'use strict';
        let lineNumber = $('#totalOrderItems').val();

        $(document).ready(function () {
            // Load existing order details if any (this part may be dynamic based on your backend)

            $('#addOrderDetails').on('click', function () {
                $.ajax({
                    url: '@Url.Action("AddOrderDetail", "Order")',
                    type: 'GET',
                    data: { orderLine: lineNumber },
                    success: function (data) {
                        $('#orderDetailsContainer').append(data);
                        // lineNumber++;
                        $('#totalOrderItems').val(lineNumber);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error details:', status, error);
                        alert('An error occurred while loading the data. Please check the console for details.');
                    }
                });
            });

            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
